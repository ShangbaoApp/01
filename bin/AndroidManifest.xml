            android:label="@string/app_name" />
        <activity android:name="com.shangbao.activity.DetailPageActivity"
            android:label="Second" />
        <activity android:name="com.shangbao.MainActivity"
            android:label="Second" />
        <activity android:name="com.shangbao.tabactivity.LatestActivity"
            android:label="Second" />
        <activity android:name="com.shangbao.tabactivity.OriginActivity"
            android:label="Second" />
        <activity android:name="com.shangbao.tabactivity.PhotoActivity"
            android:label="Second" />
        <activity android:name="com.shangbao.activity.NewsContent"
             android:windowSoftInputMode="stateAlwaysHidden" 
            android:label="Second" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA"/>
	<uses-feature android:name="android.hardware.camera" />
	<uses-feature android:name="android.hardware.camera.autofocus" />
</manifest>
